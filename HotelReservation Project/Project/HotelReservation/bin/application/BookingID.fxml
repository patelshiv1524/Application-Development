<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="206.0" prefWidth="307.0" style="-fx-background-color: linear-gradient(to bottom, #3a6186, #89253e);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.BookingIdController">
   <children>
      <!-- Title Label -->
      <Label layoutX="34.0" layoutY="23.0" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" text="Billing Service" />
      
      <!-- Enter Booking ID Label -->
      <Label layoutX="34.0" layoutY="64.0" style="-fx-text-fill: #ffffff; -fx-font-size: 16px;" text="Enter Booking ID" />
      
      <!-- Booking ID TextField -->
      <TextField fx:id="bookingID" layoutX="33.0" layoutY="96.0" prefWidth="248.0" style="-fx-background-color: #555555; -fx-text-fill: #ffffff; -fx-border-color: #ffffff; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-font-size: 14px;" />

      <!-- Confirm Button -->
      <Button layoutX="112.0" layoutY="147.0" mnemonicParsing="false" onAction="#confirm" prefHeight="35.0" prefWidth="90.0" style="-fx-background-color: #ff6f61; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10px;" text="Confirm">
         <effect>
            <DropShadow color="#00000088" offsetX="0" offsetY="2" radius="5" />
         </effect>
      </Button>
   </children>
</AnchorPane>
